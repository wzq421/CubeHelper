<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <import type="me.goldze.mvvmhabit.binding.viewadapter.recyclerview.LineManagers" />
        <variable
            name="adapter"
            type="com.example.myapplication.ui.timer.TimerAdapter" />
        <variable
            name="viewModel"
            type="com.example.myapplication.ui.timer.TimerViewModel" />
    </data>
    <com.blankj.swipepanel.SwipePanel
        android:id="@+id/timer_swipe_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isLeftCenter="true"
        android:fitsSystemWindows="true"
        app:leftSwipeColor="@color/light_gray"
        app:leftDrawable="@drawable/slide_to_left">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timer_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/timer_appbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/SkyBlue"

                android:layout_marginBottom="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:src="@drawable/back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    binding:onClickCommand="@{viewModel.goBack}" />

                <ImageView
                    android:id="@+id/timer_title_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/timer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/timer_title_text"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/timer_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计时器"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/edit_countdown"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/edit_countdown"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    binding:onClickCommand="@{viewModel.showEdit}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/set_new_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@color/SkyBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timer_appbar">

                <EditText
                    android:id="@+id/text_new_countdown"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:hint="设置新的倒计时时长"
                    android:maxLines="1"
                    android:text="@={viewModel.newCountdown}" />

                <Button
                    android:id="@+id/btn_new_countdown"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@color/AliceBlue"
                    android:visibility="invisible"
                    android:text="更改"
                    binding:onClickCommand="@{viewModel.changeCountdown}" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shuffling_formulation_linear"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/SkyBlue"
               android:paddingBottom="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/set_new_countdown" >
            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/get_new_formulation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/AliceBlue"
                    binding:onClickCommand="@{viewModel.getShufflingFormulation}"
                    android:textSize="15dp"
                    android:text="随机生成打乱公式"
                    />
            </com.github.florent37.shapeofview.shapes.RoundRectView>
            <TextView
                android:id="@+id/shuffling_formulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@={viewModel.formulation}"
              />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/countdown_linear"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shuffling_formulation_linear"
                app:layout_constraintVertical_bias="0"
                binding:adapter="@{adapter}"
                binding:itemBinding="@{viewModel.itemBinding}"
                binding:items="@{viewModel.items}"
                binding:layoutManager="@{LayoutManagers.linear()}"
                binding:lineManager="@{LineManagers.horizontal()}" />
            <LinearLayout
                android:id="@+id/countdown_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/goto_timing"
                app:layout_constraintStart_toStartOf="parent"

                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/countdown_time"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:text="@{viewModel.countdown}"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/start_countdown"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="开始倒计时"
                    binding:onClickCommand="@{viewModel.startCountdown}" />
            </LinearLayout>

            <Button
                android:id="@+id/goto_timing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="直接开始计时"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                binding:onClickCommand="@{viewModel.goToTimingDirectly}" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.blankj.swipepanel.SwipePanel>
</layout>